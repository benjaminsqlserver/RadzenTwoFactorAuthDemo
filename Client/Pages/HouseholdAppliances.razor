@page "/household-appliances"
@attribute [Authorize]

<PageTitle>HouseholdAppliances</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="HouseholdAppliances" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@householdAppliances" LoadData="@Grid0LoadData" Count="@count" TItem="HouseholdAppliancesApp.Server.Models.ConData.HouseholdAppliance" RowDoubleClick="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="HouseholdAppliancesApp.Server.Models.ConData.HouseholdAppliance" Property="ApplianceID" Title="Appliance I D">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="HouseholdAppliancesApp.Server.Models.ConData.HouseholdAppliance" Property="ApplianceName" Title="Appliance Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="HouseholdAppliancesApp.Server.Models.ConData.HouseholdAppliance" Property="Price" Title="Price">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="HouseholdAppliancesApp.Server.Models.ConData.HouseholdAppliance" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="householdAppliance">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, householdAppliance)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
